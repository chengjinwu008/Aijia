<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/theme_color</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textColorHint">@color/text_hint</item>
    </style>

    <style name="UserCenterBars">
        <item name="android:drawablePadding">8dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:padding">7dp</item>
        <item name="android:drawableRight">@drawable/go_into</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60sp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@color/pure_white</item>
    </style>

</resources>
