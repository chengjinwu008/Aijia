<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/nav_bar"
        android:background="@color/theme_color"
        android:padding="@dimen/nav_padding">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="设置密码"
            android:textColor="@color/pure_white"
            android:textSize="@dimen/nav_text_size" />

        <View
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/x_one"
            android:id="@+id/set_password_close" />
    </RelativeLayout>

    <ScrollView
        android:background="@color/common_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_width="286dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginTop="34dp"
                android:textColor="@color/theme_color"
                android:textSize="16sp"
                android:text="密码"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            <EditText
                android:inputType="textPassword"
                android:textColor="@color/text_color"
                android:background="@android:color/transparent"
                android:paddingLeft="0dp"
                android:paddingBottom="11dp"
                android:paddingTop="25dp"
                android:textSize="14sp"
                android:textColorHint="@color/text_hint"
                android:hint="请输入密码"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/set_password_new" />
            <View
                android:background="@color/text_hint"
                android:layout_width="match_parent"
                android:layout_height="1px"/>

            <EditText
                android:inputType="textPassword"
                android:textColor="@color/text_color"
                android:background="@android:color/transparent"
                android:paddingLeft="0dp"
                android:paddingBottom="11dp"
                android:paddingTop="25dp"
                android:textSize="14sp"
                android:textColorHint="@color/text_hint"
                android:hint="请再次输入密码"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/set_password_confirm" />
            <View
                android:background="@color/text_hint"
                android:layout_width="match_parent"
                android:layout_height="1px"/>

            <TextView
                android:textSize="18sp"
                android:text="完成"
                android:gravity="center"
                android:textColor="@color/pure_white"
                android:background="@drawable/button1"
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:id="@+id/set_password_done" />

        </LinearLayout>

    </ScrollView>


</LinearLayout>