<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.UserCenterFragment">

    <RelativeLayout
        android:id="@+id/nav1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/nav_bar"
        android:background="@color/theme_color"
        android:padding="@dimen/nav_padding">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="我的"
            android:textColor="@color/pure_white"
            android:textSize="@dimen/nav_text_size" />

        <View
            android:id="@+id/user_center_config"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/shezhi" />
    </RelativeLayout>

    <include
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/nav1"
        layout="@layout/user_center_content" />


</RelativeLayout>
