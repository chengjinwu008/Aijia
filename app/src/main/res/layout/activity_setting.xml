<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.cjq.aijia.activity.SettingActivity">

    <RelativeLayout
        android:id="@+id/nav1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/nav_bar"
        android:background="@color/theme_color"
        android:padding="@dimen/nav_padding">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="设置"
            android:textColor="@color/pure_white"
            android:textSize="@dimen/nav_text_size" />

        <ImageView
            android:scaleType="centerInside"
            android:id="@+id/setting_close"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:padding="5dp"
            android:layout_alignParentEnd="false"
            android:layout_alignParentRight="false"
            android:layout_centerVertical="true"
            android:src="@drawable/fanhui_one" />
    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:divider="@color/common_background"
        android:dividerHeight="1dp"
        android:background="@color/common_background"
        android:id="@+id/setting_recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>
